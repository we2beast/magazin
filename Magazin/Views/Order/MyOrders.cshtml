@model IEnumerable<Magazin.Models.MyOrdersModel>

@{
    ViewBag.Title = "MyOrders";
}

<h2>Мои заказы</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </th>
            <td>
                @Html.ActionLink("Details", "DetailsMyOrder", new { code = item.OrderNumber }) |
                @if (item.Status.Name == "Новый")
                {
                   @Html.ActionLink("Cancal", "CancalOrder", new { code = item.OrderNumber })
                }
            </td>

        </tr>
    }
</table>
